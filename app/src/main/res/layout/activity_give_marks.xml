<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".GiveMarks">

    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assigning Marks"
        android:textSize="30sp"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/Assg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Marks of Assignment 1"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@+id/h1"/>

    <EditText
        android:id="@+id/Assg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Marks of Assignment 2"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@+id/Assg1"/>

    <EditText
        android:id="@+id/Mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Marks of Midterm"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@+id/Assg2"/>

    <EditText
        android:id="@+id/Fin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Marks of Final Exam"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@+id/Mid"/>

    <Button
        android:id="@+id/PostMarksButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Post Marks"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"
        app:layout_constraintTop_toBottomOf="@+id/Fin"
        app:layout_constraintLeft_toLeftOf="@+id/Fin"
        app:layout_constraintRight_toRightOf="@+id/Fin"/>


</androidx.constraintlayout.widget.ConstraintLayout>