<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".PostQuestions">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Your Questions Here"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/q_title"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Question title!"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@+id/heading"/>

    <EditText
        android:id="@+id/q_ques"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your question?"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@+id/q_title"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/q_name"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Enter your name"
        app:layout_constraintTop_toBottomOf="@+id/q_ques"/>

    <EditText
        android:id="@+id/asked_by"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Question asked by whom ?"
        app:layout_constraintTop_toBottomOf="@+id/q_name"/>

    <Button
        android:id="@+id/submit_ques"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Submit Question"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/asked_by"
        app:layout_constraintLeft_toLeftOf="@+id/asked_by"
        app:layout_constraintRight_toRightOf="@+id/asked_by"/>

</androidx.constraintlayout.widget.ConstraintLayout>